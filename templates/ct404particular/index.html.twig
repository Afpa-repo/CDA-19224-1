{% block title %}Ct404particular index{% endblock %}

{% block body %}
    <h1>Ct404particular index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Address</th>
                <th>ZipCode</th>
                <th>City</th>
                <th>Mail</th>
                <th>PhoneNumber</th>
