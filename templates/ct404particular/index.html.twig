            <tr>
                <td>{{ ct404particular.id }}</td>
                <td>{{ ct404particular.firstname }}</td>
                <td>{{ ct404particular.lastname }}</td>
                <td>{{ ct404particular.address }}</td>
                <td>{{ ct404particular.zipCode }}</td>
                <td>{{ ct404particular.city }}</td>
                <td>{{ ct404particular.mail }}</td>
                <td>{{ ct404particular.phoneNumber }}</td>
                <td>{{ ct404particular.password }}</td>
                <td>{{ ct404particular.pseudo }}</td>
                <td>{{ ct404particular.clef }}</td>
                <td>{{ ct404particular.actif ? 'Yes' : 'No' }}</td>
                <td>{{ ct404particular.dateRegisteur ? ct404particular.dateRegisteur|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('ct404particular_show', {'id': ct404particular.id}) }}">show</a>
                    <a href="{{ path('ct404particular_edit', {'id': ct404particular.id}) }}">edit</a>
                </td>
            </tr>
