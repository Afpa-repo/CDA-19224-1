{% extends 'base.html.twig' %}

{% block title %}Ct404Product{% endblock %}

{% block h1 %}{{ ct404_product.name }}{% endblock %}

{% block body %}
<main>
    <div class="container white">
    <table class="responsive-table striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ct404_product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ ct404_product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ ct404_product.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ ct404_product.price }}</td>
            </tr>
            <tr>
                <th>StockQuantity</th>
                <td>{{ ct404_product.stockQuantity }}</td>
            </tr>
            <tr>
                <th>AlertQuantity</th>
                <td>{{ ct404_product.alertQuantity }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('ct404_product_index') }}">back to list</a>

    <a href="{{ path('ct404_product_edit', {'id': ct404_product.id}) }}">edit</a>

    {{ include('ct404_product/_delete_form.html.twig') }}
    </div>
</main>
{% endblock %}
